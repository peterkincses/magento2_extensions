<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="BAT_DevicePersonalisation::config" title="BAT Device Personalisation"/>
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Catalog::catalog">
                    <resource id="BAT_DevicePersonalisation::personalisation" title="Personalisation" translate="title" sortOrder="10">
                        <resource id="BAT_DevicePersonalisation::pattern" title="Patterns" translate="title" sortOrder="10">
                            <resource id="BAT_DevicePersonalisation::pattern_create" title="Patterns - Create" sortOrder="10"/>
                            <resource id="BAT_DevicePersonalisation::pattern_edit" title="Patterns - Edit" sortOrder="20"/>
                            <resource id="BAT_DevicePersonalisation::pattern_delete" title="Patterns - Delete" sortOrder="30"/>
                        </resource>
                        <resource id="BAT_DevicePersonalisation::font" title="Fonts" translate="title" sortOrder="20">
                            <resource id="BAT_DevicePersonalisation::font_create" title="Font - create" translate="title" sortOrder="30" />
                            <resource id="BAT_DevicePersonalisation::font_delete" title="Font - Delete" translate="title" sortOrder="100" />
                            <resource id="BAT_DevicePersonalisation::font_edit" title="Font - Edit" translate="title" sortOrder="150"/>
