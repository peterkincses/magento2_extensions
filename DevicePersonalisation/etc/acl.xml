                        </resource>
                        <resource id="BAT_DevicePersonalisation::restricted_word" title="Restricted Words" translate="title" sortOrder="20">
                            <resource id="BAT_DevicePersonalisation::restricted_word_create" title="Restricted Words - Create" translate="title" sortOrder="30" />
                            <resource id="BAT_DevicePersonalisation::restricted_word_edit" title="Restricted Words - Edit" translate="title" sortOrder="40" />
                            <resource id="BAT_DevicePersonalisation::restricted_word_delete" title="Restricted Words - Delete" translate="title" sortOrder="50" />
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Reports::report">
                    <resource id="Magento_Reports::salesroot">
                        <resource id="BAT_DevicePersonalisation::psn_report" title="Personalisation Sales Report"
                                  translate="title" sortOrder="56"/>
                        <resource id="BAT_DevicePersonalisation::psn_mxreport" title="Engraving Sales Report"
                                  translate="title" sortOrder="57"/>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
